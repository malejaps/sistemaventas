@model IEnumerable<SistemaVentasEntidades.PerfilEntidad>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Perfil", "Create")
    @using (Html.BeginForm("Index", "Perfil", FormMethod.Get))
    {
    <p>
        Nombre: @Html.TextBox("SearchString")
        <input type="submit" value="Filtrar" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodPerfil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodPerfil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CodPerfil })
        </td>
    </tr>
}

</table>
