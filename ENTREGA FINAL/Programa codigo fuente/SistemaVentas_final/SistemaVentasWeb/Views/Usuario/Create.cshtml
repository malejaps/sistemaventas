                @Html.PasswordFor(model => model.ContrasenaUsuario, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContrasenaUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
