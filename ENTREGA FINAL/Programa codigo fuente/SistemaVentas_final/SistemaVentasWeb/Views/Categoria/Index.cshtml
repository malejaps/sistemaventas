@model IEnumerable<SistemaVentasEntidades.Categoria_ProductoEntidad>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Crear nueva categoria", "CrearCategoria")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodCatProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreCatProducto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodCatProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCatProducto)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarCategoria", new {  codCatProducto=item.CodCatProducto}) 
            
            
        </td>
    </tr>
}

</table>
