<Window x:Class="SistemaVentasUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Ventas" Height="666.789" Width="Auto">
    <Grid Margin="0,0,0,3" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition  Width="*"  />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="206"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="41"/>
        </Grid.RowDefinitions>
        <!--area del menu-->
        <Grid Grid.Row="0" Grid.Column="0" >
            <ToolBar x:Name="btns_gestionarPedido" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Margin="0,168,0,-13">
                <StackPanel Orientation="Horizontal">
                    <Button ToolTip="Realizar un pedido"  x:Name="bt_crearPedido" Height="30" Width="36" VerticalAlignment="Top" Click="bt_crearPedido_Click">
                        <Image Source="iconosParaInterfaz/crearPedido.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>

                    </Button>
                    <Button ToolTip="Lista pedidos del negocio"   x:Name="bt_listarPedido"   Height="30" Width="32" VerticalAlignment="Top" Click="bt_listarPedido_Click">

                        <Image Source="iconosParaInterfaz/registrarPedido.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>

                    </Button>
                </StackPanel>
            </ToolBar>
            <ToolBar  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Button ToolTip="Realizar un pedido o revisar una lista de pedidos"  x:Name="bt_gestionarPedido" Height="30" Width="32" VerticalAlignment="Top" Click="bt_gestionarPedido_Click">

                        <Image Source="iconosParaInterfaz/crearPedido.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>



                    </Button>
                    <Button ToolTip="Sincronizar" x:Name="bt_sincronizar"   Height="30" Width="32" VerticalAlignment="Top" Click="bt_sincronizar_Click" >
                        <Image Source="iconosParaInterfaz/sincronizar.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>



                    </Button>
                </StackPanel>
            </ToolBar>
        </Grid>
        <!--area de informacion del vendedor-->
        <Grid ToolTip="Informacion del vendedor que desea consultar o realizar un pedido"  Grid.Column="1" HorizontalAlignment="Right" Width="207">
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <Image x:Name="im_FotoVendedor" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="45" RenderTransformOrigin="-0.145,0.423" Margin="5,10,0,0"/>
            <TextBlock x:Name="tb_NombreVendedor"   HorizontalAlignment="Left"  VerticalAlignment="Top" Height="31" Width="147" Margin="50,10,0,0" />
        </Grid>
        <!-- area de busquedaNegocio -->
        <GroupBox x:Name="gr_Negocio" Header="Negocio" Visibility="Hidden" Grid.ColumnSpan="2" BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" FontWeight="Bold" Margin="0,35,0,40" >
            <Grid>
                <DockPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,81,-24">
                        <StackPanel Orientation="Vertical" Margin="0,0,81,-24" Height="85">
                            <Grid HorizontalAlignment="Left" Height="106" Width="481">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox ToolTip="Ingrese el nombre del negocio"  x:Name="tb_IngresarNombreNegocio" HorizontalAlignment="Left" Height="26"  VerticalAlignment="Top" Width="352" Margin="1,0,0,0" BorderBrush="Black" />
                               
                                <Button ToolTip="Buscar al negocio con el nombre ingresado"  x:Name="bt_BuscarNegocio"  HorizontalAlignment="Left" Margin="378,0,0,80" VerticalAlignment="Bottom" Width="36" Height="26" RenderTransformOrigin="0.853,-1"  Click="bt_BuscarNegocio_Click" >
                                    <Image Source="ImagenesDeInterfaz\lupa.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-3.031"/>
                                                <TranslateTransform X="-0.948" Y="0.083"/>
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <Grid HorizontalAlignment="Left" Height="58" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Text="Nombre del negocio: " Grid.Row="0" MaxHeight="20"  MinHeight="25" FontWeight="Bold" FontSize="12" FontStyle="Italic" Margin="10,0,30,0"   />
                            <TextBlock Text="Ciudad: " Grid.Column="2" Grid.Row="1" MaxHeight="20" MinHeight="25" FontWeight="Bold" FontSize="12" FontStyle="Italic" />
                            <TextBlock Text="Nit: " Grid.Column="2" Grid.Row="0" MaxHeight="20"  MinHeight="25" FontWeight="Bold" FontSize="12" FontStyle="Italic"   />
                            <TextBlock  Text="Direccion: " Grid.Row="1" MaxHeight="20"  MinHeight="25" FontWeight="Bold" FontSize="12" FontStyle="Italic" Grid.ColumnSpan="3" Margin="10,0,0,0"    />

                            <!--bloques para traer el nombre y direccion-->
                            <TextBlock x:Name="tb_NombreNeg" Text="{Binding Nombre_negocio}" Grid.Column="1" Grid.Row="0" MaxHeight="20"  MinHeight="25"  FontSize="12" />
                            <TextBlock x:Name="tb_DireccionNeg" Text="{Binding Direccion}" Grid.Column="1" Grid.Row="1" MaxHeight="20" MinHeight="25"  FontSize="12"  />
                            <!--bloques para traer el nit y la ciudad-->
                            <TextBlock x:Name="tb_NitNeg" Text="{Binding Nit_negocio}" Grid.Column="3" Grid.Row="0" MaxHeight="20"  MinHeight="25"  FontSize="12"  />
                            <TextBlock x:Name="tb_CiudadNeg" Text="{Binding Ciudad}" Grid.Column="3" Grid.Row="1" MaxHeight="20" MinHeight="25"  FontSize="12" />

                        </Grid>
                    </StackPanel>
                </DockPanel>

            </Grid>
        </GroupBox>

        <!-- area de busquedaProductos -->
        <GroupBox x:Name="gr_productos"  Visibility="Hidden" Header="Productos" Grid.Row="2"  BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" FontWeight="Bold" >
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions >
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="37" />
                    <RowDefinition Height="Auto" MinHeight="26" />
                    <RowDefinition Height="169*"/>
                    <RowDefinition Height="126*" />
                </Grid.RowDefinitions>
                <TextBox  ToolTip="Ingrese el nombre del producto"  x:Name="tb_IngresarNombreProducto" Margin="10,6,147,0"  TextWrapping="Wrap"  Height="29" VerticalAlignment="Top" KeyUp="tb_IngresarNombreProducto_KeyUp"/>
                <ComboBox  ToolTip="Seleccione la categoria del producto"  x:Name="cb_CategoriasProductos" SelectedItem="Categoria del producto" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="171" Height="27" SelectionChanged="seleccionarCantidad_Click" />
                <StackPanel x:Name="sp_selecionCantidadProducto" Visibility="Hidden" Orientation="Horizontal"   Grid.Row="2">
                    <Label Content="Cantidad: "/>
                    <ComboBox x:Name="cb_seleCantidadProducto"  VerticalAlignment="Center" SelectedItem="Cantidad" HorizontalAlignment="Center" />

                </StackPanel>
                <ListView x:Name="lv_listadoProductos"  BorderThickness="0" Grid.Row="3" MinHeight="100" MinWidth="280" Margin="10,5,10,10" Grid.RowSpan="2" SelectionChanged="actualizarCantidad_Click"  >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="border" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="4" Margin="5,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label></Label>
                                    <Image HorizontalAlignment="Center" Width="40" Height="30" Grid.RowSpan="3" Grid.Row="1" VerticalAlignment="Center" Source="{Binding Path=RutaFoto}"></Image>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                                        
                                        <Button FontWeight="Bold"  FontSize="16"  Content="{Binding NombreProducto}" ></Button>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" >
                                        <Button x:Name="bt_agregarProducto"  ToolTip="Para agregar un producto, seleccione primero al producto y luego de clic en el boton de agregar"  Height="15" Width="15" Margin="0,0,5,5" HorizontalAlignment="Right" Click="bt_agregarProducto_Click">
                                            <ContentControl>
                                                <Image Source="/SistemaVentasUI;component/ImagenesDeInterfaz/agregarProducto.png" Stretch="Fill"></Image>
                                            </ContentControl>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel  Grid.Row="2" Grid.Column="1">
                                        <Label></Label>
                                        <TextBox FontSize="12" FontWeight="Bold" Text="{Binding DescripcionProducto}" 
                                               TextWrapping="Wrap" MaxWidth="200"  Height="40" 
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             IsReadOnly="True"
                                               ></TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1"  >
                                        <Label  FontSize="14" FontWeight="Bold" Content="$" ></Label>
                                        <Label  FontSize="14" FontWeight="Bold" Content="{Binding Precio}" ></Label>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" >
                                        <Label  FontSize="14" FontWeight="Bold" Content="Cantidad disponible: " ></Label>
                                        <TextBox IsReadOnly="True" Height="22" FontSize="14" FontWeight="Bold" Text="{Binding Cantidad}" ></TextBox>
                                        <!--<ComboBox x:Name="cb_seleCantidadProducto"  VerticalAlignment="Center" SelectedItem="Cantidad" HorizontalAlignment="Center" ItemsSource="{Binding cantidadProductoItems}" />-->

                                    </StackPanel>
                                    <Label Grid.Column="3" />
                                    <Label Grid.Row="5" />
                                </Grid>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"></ScaleTransform>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <SolidColorBrush />
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)" >
                                                <ColorAnimation  To="#6990EE90" Duration="0:0:0.3" Storyboard.TargetName="border"  />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                <ColorAnimation  To="Transparent" Duration="0:0:0.3" Storyboard.TargetName="border"  />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Margin" Value="5"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListView>
            </Grid>

        </GroupBox>

        <!-- area de crear pedidos -->
        <GroupBox x:Name="gr_CrearPedido"  Visibility="Hidden" Header="Crear Pedido" Grid.Row="2" Grid.Column="1"   BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" FontWeight="Bold" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView x:Name="lv_listadoPedido"  BorderThickness="0"  MinHeight="100" MinWidth="280" Margin="0,0,0,5"  >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="border" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="4" Margin="5,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label></Label>
                                    <Image HorizontalAlignment="Center" Width="40" Height="30" Grid.RowSpan="3" Grid.Row="1" VerticalAlignment="Center" Source="{Binding Path=RutaFoto}"></Image>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                                        <!--="{StaticResource LinkButtonStyle}" por ahora se quita-->
                                        <Button Command="{Binding AgregarCommand}" FontWeight="Bold"  FontSize="16"  Content="{Binding Path=NombreProducto}" ></Button>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" >
                                        <Button ToolTip="Para eliminar a un producto, primero selecciona al producto y luego de clic en el boton de eliminar"  Height="15" Width="15" Margin="0,0,5,5" Click="borrarProducto_Click">
                                            <ContentControl>
                                                <Image Source="/ImagenesDeInterfaz/borrarProducto.png" Stretch="Fill"></Image>
                                            </ContentControl>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel  Grid.Row="2" Grid.Column="1" >
                                        <Label></Label>
                                        <TextBox FontSize="12" FontWeight="Bold" Text="{Binding DescripcionProducto}" 
                                               TextWrapping="Wrap" MaxWidth="200"  Height="40" 
                                               ScrollViewer.VerticalScrollBarVisibility="Auto"
                                               IsReadOnly="True"
                                               ></TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1"  >
                                        <Label  FontSize="14" FontWeight="Bold" Content="$" ></Label>
                                        <Label  FontSize="14" FontWeight="Bold" Content="{Binding Precio}" ></Label>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" >
                                        <Label  FontSize="14" FontWeight="Bold" Content="Cantidad seleccionada: " ></Label>
                                        <TextBox IsReadOnly="True" Height="22" FontSize="14" FontWeight="Bold" Text="{Binding Cantidad}" ></TextBox>
                                    </StackPanel>
                                    <Label Grid.Column="3" />
                                    <Label Grid.Row="5" />
                                </Grid>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"></ScaleTransform>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <SolidColorBrush />
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)" >
                                                <ColorAnimation  To="#6990EE90" Duration="0:0:0.10" Storyboard.TargetName="border"  />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                <ColorAnimation  To="Transparent" Duration="0:0:0.20" Storyboard.TargetName="border"  />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Margin" Value="5"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListView>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                    <Label Content="Total: "></Label>
                    <TextBox x:Name="tb_totalPedido" Width="100" Text="0" IsReadOnly="True" HorizontalAlignment="Center"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Grid.Row="3">
                    <Button   x:Name="tb_aceptarPedido" Click="registrarPedido" IsEnabled="False">
                        <Image Source="iconosParaInterfaz/aceptar.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>

                    </Button>
                    <Label></Label>
                    <Button Click="cancelarPedido" x:Name="tb_cancelarPedido" IsEnabled="False" >

                        <Image Source="iconosParaInterfaz/cancelar.png" Height="25" Width="30" RenderTransformOrigin="0.469,0.05">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-3.031"/>
                                    <TranslateTransform X="-0.948" Y="0.083"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>


                    </Button>
                </StackPanel>

            </Grid>
        </GroupBox>

        <!-- area de listar pedidos -->
        <GroupBox x:Name="gr_ListarPedidos"  Visibility="Hidden" Header="Listar Pedidos" Grid.Row="2" Grid.ColumnSpan="2"   BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" FontWeight="Bold" >
            <Grid Margin="0,-14,0,114">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="420" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Label  FontSize="12"  Content="" ></Label>
                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">
                    <Label  FontSize="12"  Content="Fecha" ></Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left">
                    <Label  FontSize="12"  Content="Valor Total" Width="106"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left">
                    <Label  FontSize="12"  Content="Detalle" ></Label>
                </StackPanel>
                <!-- Cuadro con un item del listado de pedidos!-->
                <ListView x:Name="lv_ListadoPedidos"  BorderThickness="1" Grid.ColumnSpan="3" Grid.Row="2" MinHeight="20" MinWidth="280" Margin="0,10,0,0" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="border" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="4" Margin="5,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="420" />
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition Width="200" />
                                    </Grid.ColumnDefinitions>


                                    <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock  Text="{Binding Fecha}"   HorizontalAlignment="Left"  VerticalAlignment="Top" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" >
                                        <TextBlock Text="$"   HorizontalAlignment="Left"  VerticalAlignment="Top" />
                                        <TextBlock Text="{Binding TotalPedido}"   HorizontalAlignment="Left"  VerticalAlignment="Top" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="2" >
                                        <Button  ToolTip="Ver el detalle del pedido. Primero seleccione el pedido y luego de clic en el boton de ver detalle." x:Name="bt_abrirDetalle" Content="Ver detalle"  Margin="0,0,10,2" HorizontalAlignment="Left" Width="75" Height="23" VerticalAlignment="Bottom" Click="bt_abrirDetalle_Click"/>
                                    </StackPanel>

                                </Grid>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"></ScaleTransform>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <SolidColorBrush />
                                </Border.Background>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)" >
                                                <ColorAnimation  To="#6990EE90" Duration="0:0:0.3" Storyboard.TargetName="border"  />

                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave" >
                                        <BeginStoryboard>
                                            <Storyboard TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                <ColorAnimation  To="Transparent" Duration="0:0:0.3" Storyboard.TargetName="border"  />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Margin" Value="5"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListView>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Grid.ColumnSpan="3">
                    <Label Content=" "></Label>
                    <Label Content="Total Pedidos: "></Label>
                    <TextBox x:Name="tb_TotalPedidos"  Width="100"/>
                </StackPanel>

            </Grid>
        </GroupBox>

        <!--Area de detalle pedido-->
        <GroupBox x:Name="gr_DetallePedido"  Visibility="Hidden" Header="Detalle de Pedido" Grid.Row="2" Grid.ColumnSpan="2"   BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" FontWeight="Bold" >

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450" />
                    <ColumnDefinition Width="550" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions >
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>

                <Label  FontSize="12"  Content="" ></Label>
                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                    <Label  FontSize="12" FontWeight="Bold" Content="Cantidad Pedida" ></Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
                    <Label  FontSize="12"  Content="Producto" Width="106"/>
                </StackPanel>

