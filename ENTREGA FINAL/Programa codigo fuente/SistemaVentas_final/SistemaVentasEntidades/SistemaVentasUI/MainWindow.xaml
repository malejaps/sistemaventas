                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Margin" Value="5"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListView>

                <ListView x:Name="lv_ListadoProductosDePedido" HorizontalAlignment="Center" BorderThickness="0"  Grid.Row="1" Grid.Column="1"  Margin="10,5,10,10" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="border" BorderBrush="#FF000000" BorderThickness="1" CornerRadius="4"  Margin="5,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>
                                    <Label></Label>
                                    <Image HorizontalAlignment="Center" Width="40" Height="30"  Grid.Row="0"  Grid.Column="1" VerticalAlignment="Center" Source="{Binding RutaFoto}"></Image>
