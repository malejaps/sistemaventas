                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="FrameworkElement.Margin" Value="5"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ListView>

                <StackPanel Grid.Row="2" Grid.Column="0">
                <Label  FontSize="12" FontWeight="Bold" Content="Total Pedido: " ></Label>
                </StackPanel >
                <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.Column="0">
                    <Label  FontSize="12" FontWeight="Bold" Content=" $" ></Label>
                    <TextBlock x:Name="tb_TotalPedidoDetalle" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                </StackPanel>           
                <StackPanel Grid.Row="2" Grid.Column="2">                   
                    <Button  ToolTip="Volver a la lista de pedidos"  x:Name="bt_volver" Content="Volver"  HorizontalAlignment="Right" Width="103" Height="23" VerticalAlignment="Bottom" RenderTransformOrigin="0.507,0.043" Grid.Row="1" Margin="0,0,10,0" Click="bt_volver_Click"/>
                </StackPanel>

            </Grid>

        </GroupBox>


        <StackPanel VerticalAlignment="Bottom"  Grid.Row="3" Grid.Column="1"  HorizontalAlignment="Right" Orientation="Horizontal" Height="26" Width="224"  >
            <Label  Content="Software Pedidos 2015 @ UnivalleSoft" Width="222"/>
        </StackPanel>


    </Grid>



</Window>
