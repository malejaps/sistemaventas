                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="50" />
                                       
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal"  Grid.Column="2" HorizontalAlignment="Center" >
                                        <TextBlock Text="{Binding Cantidad}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                                        <Label  FontSize="12" FontWeight="Bold" Content=" Unidades" ></Label>
                                    </StackPanel>
                              
                                </Grid>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"></ScaleTransform>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <SolidColorBrush />
                                </Border.Background>
